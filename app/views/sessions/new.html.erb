<% provide(:title, "Sign in") %>
<div class="border-form-div">
<h1>Sign in</h1>

<style>
.opahover img {
opacity: 0.5;
}
.opahover img:hover {
opacity: 1;
}
</style>

<hr> <center>
<div class="opahover span4 centered">
<a href="/auth/google_oauth2" title="Google Plus"><img src="/assets/images/google_plus-round-64.png" /></a>
</div>
<hr> </center>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
<br />
  </div>
</div>
</div>